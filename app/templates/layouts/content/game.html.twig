{% extends 'layouts/content.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link id="game-css" rel="stylesheet" href="{{ app.baseUri }}/assets/stylesheets/game.css?version={{ app.version }}" />
{% endblock %}

{% block header %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-sm-4">
                <a id="logo-link"
                    href="{{ url('game') }}">
                    <img class="img-responsive"
                        src="{{ app.baseUrl }}/assets/images/logo.png"
                        alt="Logo" />
                </a>
            </div>
            <div class="col-lg-9 col-sm-8">
                <div class="clearfix">
                    <div class="pull-right">
                        <a class="btn btn-link"
                            href="{{ app.logoutUrl }}">
                            {{ 'Logout' | trans }}
                        </a>
                    </div>
                </div>
                <ul class="nav nav-tabs nav-justified">
                    <li role="presentation" class="active">
                        <a href="{{ url('game') }}">
                            {{ 'Home' | trans }}
                        </a>
                    </li>
                    <li role="presentation" >
                        <a href="#">
                            {{ 'Map' | trans }}
                        </a>
                    </li>
                    <li role="presentation" >
                        <a href="#">
                            {{ 'Market' | trans }}
                        </a>
                    </li>
                    <li role="presentation" >
                        <a href="#">
                            {{ 'Statistics' | trans }}
                        </a>
                    </li>
                    <li role="presentation" >
                        <a href="#">
                            {{ 'Gold' | trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container{{ isContainerFluid ? '-fluid' : '' }}">
        <div class="row">
            <div class="col-lg-3 col-sm-4">
                <div id="sidebar" role="complementary">
                    {% include 'layouts/content/game/_parts/sidebar.html.twig' %}
                </div> <!-- /#sidebar -->
            </div> <!-- /.col-lg-3 -->
            <div class="col-lg-9 col-sm-8">
                <div id="main" role="main">
                    {% block main %}{% endblock %}
                </div> <!-- /#main -->
            </div> <!-- /.col-lg-9 -->
        </div> <!-- /.row -->
    </div> <!-- /.container-fluid -->
{% endblock %}
