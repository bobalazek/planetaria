{% extends 'layouts/content.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link id="game-css" rel="stylesheet" href="{{ app.baseUri }}/assets/stylesheets/game.css?version={{ app.version }}" />
{% endblock %}

{% block header %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-sm-4">
                <a id="logo-link"
                    href="{{ url('game') }}">
                    <img class="img-responsive"
                        src="{{ app.baseUrl }}/assets/images/logo.png"
                        alt="Logo" />
                </a>
            </div>
            <div class="col-lg-9 col-sm-8">
                <div id="header-upper"
                    class="clearfix">
                    <div class="pull-right">
                        <span id="header-date">
                            <i class="fa fa-calendar"></i>
                            {{ app.currentDate | date(app.dateFormat) }}
                        </span>
                        <span id="header-time">
                            <i class="fa fa-clock-o"></i>
                            <span>{{ app.currentTime }}</span>
                        </span>
                        <a id="header-logout-link"
                            class="btn btn-link"
                            href="{{ app.logoutUrl }}">
                            {{ 'Logout' | trans }}
                        </a>
                    </div>
                </div>
                <ul class="nav nav-tabs nav-justified">
                    <li role="presentation"
                        class="{{ path('game') == app.currentUri ? 'active' : '' }}">
                        <a href="{{ url('game') }}">
                            <i class="fa fa-home"></i>
                            {{ 'Home' | trans }}
                        </a>
                    </li>
                    <li role="presentation"
                        class="{{ path('game.map') in app.currentUri ? 'active' : '' }}">
                        <a href="{{ url('game.map') }}">
                            <i class="fa fa-map"></i>
                            {{ 'Map' | trans }}
                        </a>
                    </li>
                    <li role="presentation"
                        class="{{ path('game.market') in app.currentUri ? 'active' : '' }}">
                        <a href="{{ url('game.market') }}">
                            <i class="fa fa-shopping-cart"></i>
                            {{ 'Market' | trans }}
                        </a>
                    </li>
                    <li role="presentation"
                        class="{{ path('game.statistics') in app.currentUri ? 'active' : '' }}">
                        <a href="{{ url('game.statistics') }}">
                            <i class="fa fa-bar-chart"></i>
                            {{ 'Statistics' | trans }}
                        </a>
                    </li>
                    <li role="presentation"
                        class="{{ path('game.premium') in app.currentUri ? 'active' : '' }}">
                        <a href="{{ url('game.premium') }}">
                            <i class="fa fa-star"></i>
                            {{ 'Premium' | trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="container{{ isContainerFluid ? '-fluid' : '' }}">
        <div class="row">
            <div class="col-lg-3 col-sm-4">
                <div id="sidebar" role="complementary">
                    {% include 'layouts/content/game/_parts/sidebar.html.twig' %}
                </div> <!-- /#sidebar -->
            </div> <!-- /.col-lg-3 -->
            <div class="col-lg-9 col-sm-8">
                <div id="main" role="main">
                    {% block main %}{% endblock %}
                </div> <!-- /#main -->
            </div> <!-- /.col-lg-9 -->
        </div> <!-- /.row -->
    </div> <!-- /.container-fluid -->
{% endblock %}

{% block body_javascripts %}
    {{ parent() }}
    <script id="game-js" type="text/javascript" src="{{ app.baseUri }}/assets/javascripts/game.js?version={{ app.version }}"></script>
    <script id="game-initialize-js">
        Game.initialize();
    </script>
{% endblock %}
