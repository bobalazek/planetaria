{% extends 'layouts/content/default.html.twig' %}

{% block title %}{{ 'Members area'|trans }} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container{{is_granted('ROLE_ADMIN') ? '-fluid' : ''}}">
        <div class="row">
            {% if app.user and is_granted('ROLE_ADMIN') %}
                <div class="col-md-2">
                    <div id="sidebar" role="complementary">
                        {% block sidebar %}
                            {% include 'layouts/content/members-area/_parts/sidebar.html.twig' %}
                        {% endblock %}
                    </div>
                </div>
            {% endif %}
            <div class="col-md-{{ app.user and is_granted('ROLE_ADMIN') ? '10' : '12' }}">
                <div id="main" role="main">
                    {% block main %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
