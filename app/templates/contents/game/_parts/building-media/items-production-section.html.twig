<section class="building-units-production-section">
    <h4>{{ 'Items production' | trans }}</h4>
    <ul class="list-group">
        {% for item, itemProductionTime in building.getItemsProduction(level) %}
            <li class="list-group-item">
                <span class="badge">
                    {{ itemProductionTime }}
                    {{ 'seconds' | trans }}
                </span>
                {{ item | humanize | trans }}
            </li>
        {% endfor %}
    </ul>
</div> <!-- /.building-items-production-section -->
