<section class="building-resources-production-section">
    <h4>
        {{ 'Resources production' | trans }}
        <small>{{ 'per minute' | trans }}</small>
    </h4>
    <ul class="list-group">
        {% for resource, resourceAmount in building.getResourcesProduction(level) %}
            <li class="list-group-item">
                <span class="badge">
                    {{ resourceAmount }}
                </span>
                {{ resource | humanize | trans }}
            </li>
        {% endfor %}
    </ul>
</section> <!-- /.building-resources-production-section -->
