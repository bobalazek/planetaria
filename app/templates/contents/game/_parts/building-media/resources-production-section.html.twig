<section class="building-resources-production-section">
    <h4>
        {{ 'Resources production' | trans }}
        <small>{{ 'per minute' | trans }}</small>
    </h4>
    <ul class="list-group">
        {% for resource, resourceAmount in building.getResourcesProduction(level) %}
            {% set resourceObject = app['game.resources'].getAllWithData(resource) %}
            <li class="list-group-item">
                <span class="badge">
                    {{ resourceAmount }}
                </span>
                <img src="{{ app.baseUrl }}/assets/images/resources/{{ resourceObject.getKey() }}.png"
                    style="max-width: 16px;" />
                {{ resourceObject.getName() | trans }}
            </li>
        {% endfor %}
    </ul>
</section> <!-- /.building-resources-production-section -->
