<ul class="list-group">
    {% for townBuilding in townBuildings %}
        {% set townBuildingTiles = townBuilding.getTiles() %}
        <a class="list-group-item clearfix"
            href="{{ url('game.towns.buildings.detail', { id: town.getId(), buildingId: townBuilding.getId() }) }}">
            <img class="pull-left"
                src="{{ app.baseUrl }}/assets/images/buildings/{{ townBuilding.getBuilding() }}/{{ townBuilding.getStatus() }}/full.png"
                style="max-width: 48px; margin-right: 20px;" />
            <h4 class="list-group-item-heading">
                {{ townBuilding.getBuilding() | humanize | trans }}
                <span class="badge"
                    data-toggle="tooltip"
                    title="{{ 'Level' | trans }}">
                    {{ townBuilding.getLevel() }}
                </span>
            </h4>
            <p>
                <b>{{ 'Created' | trans }}:</b>
                {{ townBuilding.getTimeCreated() | date(app.dateTimeFormat) }}
            </p>
        </a>
    {% endfor %}
</ul>
