<ul class="list-group">
    {% for country in countries %}
        <a class="list-group-item clearfix"
            href="{{ url('game.countries.detail', { id: country.getId() }) }}">
            <div class="pull-left"
                style="margin-right: 20px;">
                <img class="img-responsive"
                    src="{{ country.getFlagImageUrl(app.baseUrl) }}"
                    style="max-width: 64px; max-height: 64px;" />
            </div>
            <div class="pull-left">
                <h4 class="list-group-item-heading">
                    {{ country.getName() }}
                </h4>
                <p>
                    {% if country.getDescription() %}
                        {{ country.getDescription() }}
                        <br />
                    {% endif %}
                    <b>{{ 'Towns' | trans }}:</b>
                    {{ country.getTowns() | length }}
                    <br >
                    <b>{{ 'Town buildings' | trans }}:</b>
                    {{ country.getTownBuildings() | length }}
                </p>
            </div>
        </a>
    {% endfor %}
</ul>
