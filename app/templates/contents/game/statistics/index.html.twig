{% extends 'layouts/content/game.html.twig' %}

{% set isContainerFluid = true %}

{% block main %}
    <h1>{{ 'Statistics' | trans }}</h1>
    <div id="main-content">
        <div class="row">
            <div class="col-md-4">
                <h2>{{ 'Countries' | trans }}</h2>
                {% if countries %}
                    {% include 'contents/game/_parts/countries-list.html.twig' %}
                {% else %}
                    <div class="alert alert-info">
                        {{ 'No countries yet' | trans }}
                    </div>
                {% endif %}
            </div>
            <div class="col-md-4">
                <h2>{{ 'Towns' | trans }}</h2>
                {% if towns %}
                    {% include 'contents/game/_parts/towns-list.html.twig' %}
                {% else %}
                    <div class="alert alert-info">
                        {{ 'No towns yet' | trans }}
                    </div>
                {% endif %}
            </div>
            <div class="col-md-4">
                <h2>{{ 'Users' | trans }}</h2>
                {% include 'contents/game/_parts/users-list.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
