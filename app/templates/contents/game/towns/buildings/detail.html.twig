{% extends 'layouts/content/game.html.twig' %}

{% set isContainerFluid = true %}

{% block main %}
    <h1>
        {{ town.getName() }}
        <small>{{ town.getCountry() }}</small>
        <a class="btn btn-default"
            href="{{ url('game.towns.detail', { id: town.getId() }) }}">
            {{ 'Back to the Town' | trans }}
        </a>
    </h1>
    <div id="main-content">
        <div class="row">
            <div class="col-md-8">
                {% include 'contents/game/_parts/building-media.html.twig' with { level: townBuilding.getLevel(), building: townBuilding.getBuildingObject() } %}
                <ul class="list-group">
                    <li class="list-group-item">
                        <b>{{ 'Town' | trans }}:</b>
                        <a href="{{ url('game.towns.detail', { id: town.getId() }) }}">
                            {{ town }}
                        </a>
                    </li>
                    <li class="list-group-item">
                        <b>{{ 'Country' | trans }}:</b>
                        <a href="{{ url('game.countries.detail', { id: town.getCountry().getId() }) }}">
                            {{ town.getCountry() }}
                        </a>
                    </li>
                    {% if townBuilding.isUpgrading() %}
                        <li class="list-group-item">
                            <b>{{ 'Upgrade started' | trans }}:</b>
                            {{ townBuilding.getTimeNextLevelUpgradeStarted() | date(app.dateTimeFormat) }}
                        </li>
                        <li class="list-group-item">
                            <b>{{ 'Upgrade ends' | trans }}:</b>
                            {{ townBuilding.getTimeNextLevelUpgradeEnds() | date(app.dateTimeFormat) }}
                        </li>
                    {% endif %}
                    {% if townBuilding.isConstructing() %}
                        <li class="list-group-item">
                            <b>{{ 'Construction started' | trans }}:</b>
                            {{ townBuilding.getTimeCreated() | date(app.dateTimeFormat) }}
                        </li>
                        <li class="list-group-item">
                            <b>{{ 'Construction finishes' | trans }}:</b>
                            {{ townBuilding.getTimeConstructed() | date(app.dateTimeFormat) }}
                        </li>
                    {% endif %}
                    <li class="list-group-item">
                        <b>{{ 'Created' | trans }}:</b>
                        {{ townBuilding.getTimeCreated() | date(app.dateTimeFormat) }}
                    </li>
                </ul>
                <a class="btn btn-default btn-block"
                    href="{{ url('game.map.detail', { id: town.getPlanet().getId(), x: townBuilding.getCoordinatesX(), y: townBuilding.getCoordinatesY() }) }}">
                    {{ 'View on map' | trans }}
                </a>
            </div> <!-- /.col-md-8 -->
            <div class="col-md-4">
                {% include 'contents/game/_parts/town-sidebar.html.twig' %}
            </div> <!-- /.col-md-4 -->
        </div> <!-- /.row -->
        {% if townBuilding.isUpgradable() %}
            <div class="row">
                <div class="col-md-12">
                    <hr />
                    <h3>{{ 'Upgrade' | trans }}</h3>
                    <div class="building-wrapper">
                        {% set preUpgradeChecks = app['game.buildings'].doPreUpgradeChecksResponse(
                            townBuilding
                        ) %}
                        {% if preUpgradeChecks is not same as (true) %}
                            <div class="building-overlay">
                                {{ preUpgradeChecks }}
                            </div>
                        {% endif %}
                        {% include 'contents/game/_parts/building-media.html.twig' with { level: townBuilding.getLevel() + 1, building: townBuilding.getBuildingObject() } %}
                        <a class="btn btn-success btn-block btn-lg"
                            href="{{ url('game.towns.buildings.upgrade', { id: town.getId(), buildingId: townBuilding.getId() }) }}">
                            {{ 'Upgrade' | trans }}
                        </a>
                    </div> <!-- /.building-wrapper -->
                </div> <!-- /.col-md-12 -->
            </div> <!-- /.row -->
        {% endif %}
    </div>
{% endblock %}

{% block body_javascripts %}
    {{ parent() }}
    {% if townBuilding.getSecondsUntilUpgradeDone() is not sameas(false) %}
        <script>
            var timeoutSeconds = {{ townBuilding.getSecondsUntilUpgradeDone() }};
            setTimeout(function() {
                window.location.reload();
            }, timeoutSeconds * 1000);
        </script>
    {% endif %}
{% endblock %}
