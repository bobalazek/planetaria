{% extends 'layouts/content/game.html.twig' %}

{% block title %}{{ 'Settings' | trans }} | {{ 'My' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Settings' | trans }}</h1>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-6">
                <h3>{{ 'Profile' | trans }}</h3>
                {{ form_row(form.profile) }}
            </div>
            <div class="col-md-6">
                <h3>{{ 'Account' | trans }}</h3>
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
            </div>
        </div>
        {{ form_row(form.submitButton) }}
    {{ form_end(form) }}
{% endblock %}
