{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Districts' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>
        {{ 'Districts' | trans }}
        <a class="btn btn-primary btn-sm"
            href="{{ url('members-area.districts.new') }}">
            {{ 'New' | trans }}
        </a>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Districts' | trans }}
        </li>
    </ol>
    {{ paginator_top_render(pagination) }}
    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th width="100"></th>
                    <th>{{ paginator_sortable(pagination, 'Name', 'd.name') }}</th>
                    <th>{{ paginator_sortable(pagination, 'Slug', 'd.slug') }}</th>
                    <th>{{ paginator_sortable(pagination, 'Description', 'd.slug') }}</th>
                    <th>
                        {{ 'Coordinates' | trans }} (
                            {{ paginator_sortable(pagination, 'X', 'd.coordinatesX') }},
                            {{ paginator_sortable(pagination, 'Y', 'd.coordinatesY') }}
                        )
                    </th>
                    <th width="160">{{ paginator_sortable(pagination, 'Time Created', 'd.timeCreated') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for district in pagination.getItems() %}
                    <tr>
                        <td>
                            <div class="object-checkbox-wrapper">
                                <input class="object-checkbox"
                                    type="checkbox"
                                    name="ids[]"
                                    value="{{ district.getId() }}" />
                            </div>
                            <a class="btn btn-xs btn-default"
                                data-toggle="tooltip"
                                title="{{ 'Edit' | trans }}"
                                href="{{ url('members-area.districts.edit', { id: district.getId() }) }}">
                                <i class="fa fa-fw fa-cog"></i>
                            </a>
                            <a class="btn btn-xs btn-danger"
                                data-toggle="tooltip"
                                title="{{ 'Remove' | trans }}"
                                href="{{ url('members-area.districts.remove', { id: district.getId() }) }}">
                                <i class="fa fa-fw fa-times"></i>
                            </a>
                        </td>
                        <td>{{ district.getName() }}</td>
                        <td>{{ district.getSlug() }}</td>
                        <td>{{ district.getDescription() }}</td>
                        <td>
                            {{ district.getCoordinatesX() }},
                            {{ district.getCoordinatesY() }}
                        </td>
                        <td>{{ district.getTimeCreated() | date(app.dateTimeFormat) }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">
                            {{ 'No districts yet' | trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <p>
        <label>
            <input id="check-all-checkbox"
                type="checkbox" />
            {{ 'Check All' | trans }}
        </label>
        -
        {{ 'With Selected' | trans }}:
        <a id="remove-selected-button"
            class="btn btn-xs btn-danger"
            data-toggle="tooltip"
            title="{{ 'Remove' | trans }}"
            href="{{ url('members-area.districts.remove', { id: 0 }) }}">
            <i class="fa fa-fw fa-times"></i>
        </a>
    </p>
    {{ paginator_bottom_render(pagination) }}
{% endblock %}
