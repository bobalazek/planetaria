{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-md-6">
            <h3>{{ 'Profile' | trans }}</h3>
            {{ form_row(form.profile) }}
        </div>
        <div class="col-md-6">
            <h3>{{ 'Account' | trans }}</h3>
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
        </div>
    </div>
    {{ form_row(form.submitButton) }}
{{ form_end(form) }}
