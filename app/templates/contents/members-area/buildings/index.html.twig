{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Buildings' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Buildings' | trans }}</h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Buildings' | trans }}
        </li>
    </ol>
    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>{{ 'Key' | trans }}</th>
                    <th>{{ 'Name' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for buildingKey, building in buildings %}
                    <tr>
                        <td>{{ buildingKey }}</td>
                        <td>{{ building }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
