{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Weapons' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Weapons' | trans }}</h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Weapons' | trans }}
        </li>
    </ol>
    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>{{ 'Key' | trans }}</th>
                    <th>{{ 'Name' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for weaponKey, weapon in weapons %}
                    <tr>
                        <td>{{ weaponKey }}</td>
                        <td>{{ weapon }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
