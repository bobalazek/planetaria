{% extends 'layouts/email.html.twig' %}

{% block main %}
    <table class="row note">
        <tr>
            <td class="wrapper last">
                <h4>
                    {{ 'Hello' | trans }}
                    <b>{{ user.getUsername() }}</b>!
                </h4>
                <p>{{ 'You have been locked' | trans }}!</p>
                {% if user.getLockedReason() %}
                    <h5>{{ 'Reason' | trans }}:</h5>
                    <table class="twelve columns">
                        <tr>
                            <td class="panel">
                                {{ user.getLockedReason() }}
                            </td>
                            <td class="expander"></td>
                        </tr>
                    </table>
                    <p></p>
                {% endif %}
            </td>
        </tr>
    </table>
{% endblock %}
